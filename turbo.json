{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "format": {},
    "db:push": {},
    "db:studio": {},
    "db:makemigration": {},
    "db:deploy": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate"]
    },
    "db:generate": {
      "inputs": ["packages/db/prisma/schema.prisma"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "PORT",
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET"
  ]
}
