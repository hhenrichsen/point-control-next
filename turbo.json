{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate"]
    },
    "lint": {},
    "db:studio": {
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:generate": {
      "inputs": ["packages/db/lib/prisma/schema.prisma"],
      "outputs": ["packages/db/lib/generated"]
    },
    "db:push": {
      "cache": false
    }
  },
  "globalEnv": [
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL"
  ]
}
