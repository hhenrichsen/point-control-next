{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^db:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "format": {},
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:makemigration": {},
    "db:deploy": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate"]
    },
    "db:generate": {
      "inputs": ["prisma/**"]
    },
    "test": {
      "dependsOn": ["^db:generate"]
    },
    "test:e2e": {
      "dependsOn": ["^db:generate"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "PORT",
    "DISCORD_CLIENT_ID",
    "DISCORD_CLIENT_SECRET",
    "CI",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "CLERK_USER_WEBHOOK_SECRET_KEY"
  ]
}
