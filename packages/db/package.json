{
  "name": "db",
  "version": "0.0.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "withenv": "dotenv -e ../../.env --",
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "pnpm withenv prisma generate",
    "db:push": "pnpm withenv prisma db push --skip-generate",
    "db:studio": "pnpm withenv prisma studio",
    "db:makemigration": "pnpm withenv prisma migrate dev",
    "db:deploy": "pnpm withenv prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^5.3.0",
    "dotenv-cli": "^7.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "eslint": "^8.49.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.0.3",
    "prettier-config": "workspace:*",
    "prisma": "^5.3.0",
    "tsconfig": "workspace:*",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint-config-custom/library"
    ]
  },
  "prettier": "prettier-config"
}
